generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_PUBLIC_URL")
}

// V5: Show Type Enum
enum ShowType {
  HOME
  CALLAWAY
}

// V1 MVP Tables

model Act {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // V5: Many-to-many with videos
  videos      VideoAct[]
  votes       Vote[]

  @@map("acts")
}

model Video {
  id          String   @id @default(uuid())
  youtubeUrl  String   @map("youtube_url")
  youtubeId   String   @map("youtube_id")
  title       String
  year        Int
  description String?

  // V5: Show type (required)
  showType    ShowType @map("show_type")

  // V6: Flag for videos that need performer tagging (set by discovery tool)
  needsPerformers Boolean @default(false) @map("needs_performers")

  uploaderId  String?  @map("uploader_id")
  uploader    User?    @relation("UploadedVideos", fields: [uploaderId], references: [id])
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // V5: Many-to-many with acts (replaces single actId)
  acts        VideoAct[]

  // V2: Performer tagging
  performers  VideoPerformer[]

  // V3: Voting
  votes       Vote[]

  // V4: Comments
  comments    Comment[]

  @@map("videos")
}

// V5: Video-Act join table (many-to-many)
model VideoAct {
  id        String   @id @default(uuid())
  videoId   String   @map("video_id")
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  actId     String   @map("act_id")
  act       Act      @relation(fields: [actId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([videoId, actId])
  @@map("video_acts")
}

// V2 Auth Tables (NextAuth.js compatible)

model User {
  id            String    @id @default(uuid())
  firstName     String    @map("first_name")
  lastName      String    @map("last_name")
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Auth relations
  accounts      Account[]
  sessions      Session[]

  // App relations
  videos        Video[]          @relation("UploadedVideos")
  performances  VideoPerformer[]
  performerTags VideoPerformer[] @relation("PerformerTaggedBy") // Tags this user added
  votes         Vote[]
  comments      Comment[]
  uploadQueue   UploadQueue[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// V2: Video Performer Tagging
model VideoPerformer {
  id        String   @id @default(uuid())
  videoId   String   @map("video_id")
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // V6: Track who added this performer tag (for audit)
  taggedById String?  @map("tagged_by_id")
  taggedBy   User?    @relation("PerformerTaggedBy", fields: [taggedById], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now()) @map("created_at")

  @@unique([videoId, userId])
  @@map("video_performers")
}

// V4: Comments
model Comment {
  id        String   @id @default(uuid())
  content   String   @db.VarChar(140) // Tweet-length limit
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  videoId   String   @map("video_id")
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("comments")
}

// V3: Voting System
model Vote {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  videoId   String   @map("video_id")
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  actId     String   @map("act_id")
  act       Act      @relation(fields: [actId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([userId, actId]) // One vote per user per act
  @@map("votes")
}

// V6: Upload Queue Status
enum UploadStatus {
  PENDING
  UPLOADED
  FAILED
}

// V6: Upload Queue for video files awaiting YouTube upload
model UploadQueue {
  id           String       @id @default(uuid())

  // File info
  fileName     String       @map("file_name")
  fileSize     Int          @map("file_size") // bytes
  blobUrl      String       @map("blob_url")

  // Video metadata (user-provided)
  title        String
  year         Int
  description  String?
  showType     ShowType     @map("show_type")
  actIds       String[]     @map("act_ids") // Store act IDs as array
  performerIds String[]     @map("performer_ids") @default([])

  // Queue status
  status       UploadStatus @default(PENDING)
  youtubeUrl   String?      @map("youtube_url") // Filled after manual upload
  errorMessage String?      @map("error_message")

  // Tracking
  uploaderId   String       @map("uploader_id")
  uploader     User         @relation(fields: [uploaderId], references: [id], onDelete: Cascade)
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")
  processedAt  DateTime?    @map("processed_at") // When uploaded to YouTube

  @@map("upload_queue")
}

// V6: Track daily YouTube uploads for rate limiting
model DailyUploadCount {
  id        String   @id @default(uuid())
  date      DateTime @unique @db.Date // Just the date part
  count     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("daily_upload_counts")
}

// Discovery Tool Status
enum DiscoveryStatus {
  PENDING   // Awaiting review
  APPROVED  // Reviewed and ready to push
  REJECTED  // Not suitable for archive
  PUSHED    // Successfully pushed to prod
}

// Discovery Tool: Videos found via YouTube search, pending review
model DiscoveredVideo {
  id              String          @id @default(uuid())
  youtubeId       String          @unique @map("youtube_id")
  youtubeUrl      String          @map("youtube_url")

  // Raw metadata from YouTube
  rawTitle        String          @map("raw_title")
  rawDescription  String?         @map("raw_description")
  channelName     String?         @map("channel_name")
  thumbnailUrl    String?         @map("thumbnail_url")
  publishedAt     DateTime?       @map("published_at")

  // Inferred/parsed metadata (editable during review)
  inferredYear      Int?            @map("inferred_year")
  inferredShowType  String?         @map("inferred_show_type") // HOME, CALLAWAY, or null
  inferredActNames  String[]        @map("inferred_act_names")
  inferredPerformers String[]       @map("inferred_performers") // Name guesses
  inferredPerformerIds String[]     @map("inferred_performer_ids") @default([]) // User IDs for performers

  // Review fields
  status          DiscoveryStatus @default(PENDING)
  reviewNotes     String?         @map("review_notes")

  // Track which prod video it became (after push)
  prodVideoId     String?         @map("prod_video_id")

  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")

  @@map("discovered_videos")
}
